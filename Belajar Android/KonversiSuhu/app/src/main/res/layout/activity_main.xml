<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFC107">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Konversi Suhu"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:background="#2196F3"
        android:padding="16dp"
        android:layout_marginBottom="32dp" />

    <!-- Thermometer Icon Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="40dp">

        <!-- Thermometer Emoji -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŒ¡ï¸"
            android:textSize="80sp"
            android:layout_marginBottom="16dp" />

        <!-- Lines beside thermometer -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="#2196F3"
                android:layout_marginEnd="8dp" />
            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="#2196F3"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Input Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilihan Konversi"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerKonversi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editTextSuhu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="100"
            android:inputType="numberSigned|numberDecimal"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:textColor="#333333"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/buttonKonversi"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="KONVERSI"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#2196F3"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

    <!-- Result Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="24dp">

        <TextView
            android:id="@+id/textViewHasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="80.0"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textAlignment="center"
            android:padding="16dp" />

    </LinearLayout>

</LinearLayout>