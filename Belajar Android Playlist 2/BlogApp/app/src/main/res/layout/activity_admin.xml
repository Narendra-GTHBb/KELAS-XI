<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/background">

    <TextView
        style="@style/HeadingLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Panel"
        android:textColor="@color/primary"
        android:layout_marginBottom="32dp" />

    <TextView
        style="@style/BodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate dummy blog data for testing"
        android:textColor="@color/text_secondary"
        android:textAlignment="center"
        android:layout_marginBottom="32dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeWidth="0dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                style="@style/HeadingSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dummy Data Generator"
                android:layout_marginBottom="12dp" />

            <TextView
                style="@style/BodyTextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This will create 6 sample articles with different categories and 3 dummy authors in your Firebase database."
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnGenerateDummyData"
                style="@style/CustomButton.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate Dummy Data"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnTestFirebase"
                style="@style/CustomButton.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Firebase Connection"
                android:textSize="14sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        style="@style/BodyTextSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚠️ This will add data to your Firebase database"
        android:textColor="@color/warning_yellow"
        android:layout_marginTop="16dp" />

</LinearLayout>