rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin users collection - allow read for authenticated users
    match /admin_users/{adminId} {
      allow read: if request.auth != null;  // Allow any authenticated user to read admin data for login verification
      allow write: if false; // Only allow creation through server-side scripts
    }
    
    // Users collection - readable and writable by authenticated admins only
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Foods collection - readable and writable by authenticated admins only
    match /foods/{foodId} {
      allow read, write: if request.auth != null;
    }
    
    // Categories collection - readable and writable by authenticated admins only
    match /categories/{categoryId} {
      allow read, write: if request.auth != null;
    }
    
    // Orders collection - readable and writable by authenticated admins only
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }
    
    // Analytics collection - readable by authenticated admins only
    match /analytics/{doc} {
      allow read: if request.auth != null;
      allow write: if false; // Only allow server-side updates
    }
    
    // App settings - readable and writable by authenticated admins only
    match /app_settings/{doc} {
      allow read, write: if request.auth != null;
    }
    
    // All other documents are denied by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
